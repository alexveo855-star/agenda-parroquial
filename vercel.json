{
  "outputDirectory": "public",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin-allow-popups"
        }
      ]
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    },
    "command": "npm run build"
  },
  "routes": [
    { "src": "/src/(.*)", "dest": "/public/src/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}